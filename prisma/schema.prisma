generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  // fieldName  FieldType   @attribute

  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String?  @unique
  password  String?
  provider  Boolean
  createdAt DateTime @default(now())

  userInfo UserInfo?
}

model UserInfo {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  about String?

  // Personal Info
  firstName     String?
  lastName      String?
  country       String?
  streetAddress String?
  city          String?
  region        String?
  postalCode    String?

  // Academic Info
  tenthMarks       String?
  twelfthMarks     String?
  schoolName       String?
  collegeName      String?
  graduationCourse String?
  graduationCgpa   String?
  postgrad         String?
  postgradCgpa     String?
  phd              String?
  specialization   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])

  userId      String        @unique @db.ObjectId
  AllProjects AllProjects[]
}

model AllProjects {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  category    String
  subcategory String
  thumbnail   String?
  techStack   String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  owner     UserInfo @relation(fields: [projectId], references: [id])
  projectId String   @db.ObjectId
}
